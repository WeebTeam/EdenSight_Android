<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment"
    android:background="@color/greenBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/test_dashboardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/temp_box"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:id="@+id/temp_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ecg_box"
                app:layout_constraintTop_toBottomOf="@id/test_dashboardText"
                app:layout_constraintBottom_toTopOf="@id/bp_box">

                <ImageView
                    android:id="@+id/temp_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/temperature" />

                <TextView
                    android:id="@+id/temp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BT: " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ecg_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toRightOf="@id/temp_box"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/test_dashboardText"
                app:layout_constraintBottom_toTopOf="@id/blood_sugar_box">

                <ImageView
                    android:id="@+id/ecg_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ecg" />

                <TextView
                    android:id="@+id/ecg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ECG: " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bp_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/blood_sugar_box"
                app:layout_constraintTop_toBottomOf="@id/temp_box"
                app:layout_constraintBottom_toTopOf="@id/test_dashboardButton">

                <ImageView
                    android:id="@+id/bp_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bp" />

                <TextView
                    android:id="@+id/bp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BP: " />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/blood_sugar_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toRightOf="@id/bp_box"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ecg_box"
                app:layout_constraintBottom_toTopOf="@id/test_dashboardButton">

                <ImageView
                    android:id="@+id/blood_sugar_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blood_sugar" />

                <TextView
                    android:id="@+id/blood_sugar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BG: " />

            </LinearLayout>

            <Button
                android:id="@+id/test_dashboardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="Update Details"
                android:textColor="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bp_box"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>