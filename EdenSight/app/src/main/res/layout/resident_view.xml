<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/greenBackground">

    <ImageView
        android:id="@+id/resident_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person_placeholder" />

    <TextView
        android:id="@+id/resident_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/resident_picture"
        app:layout_constraintBottom_toTopOf="@id/resident_roomNumber"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/resident_roomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/room_number"
        app:layout_constraintLeft_toRightOf="@id/resident_picture"
        app:layout_constraintBottom_toTopOf="@id/resident_status"
        app:layout_constraintTop_toBottomOf="@id/resident_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/resident_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        app:layout_constraintLeft_toRightOf="@id/resident_picture"
        app:layout_constraintBottom_toTopOf="@id/resident_caretaker"
        app:layout_constraintTop_toBottomOf="@id/resident_roomNumber"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/resident_caretaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/caretaker"
        app:layout_constraintLeft_toRightOf="@id/resident_picture"
        app:layout_constraintTop_toBottomOf="@id/resident_status"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        app:layout_constraintLeft_toRightOf="@id/resident_picture"
        app:layout_constraintTop_toBottomOf="@id/resident_caretaker"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>